<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://code.alibabatech.com/schema/dubbo
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd ">
    <dubbo:application name="${dubbo.application.name}" />
    <dubbo:registry id="gl" protocol="zookeeper" address="dubbo1.mysteel.local:2181,dubbo2.mysteel.local:2182,dubbo3.mysteel.local:2183"></dubbo:registry>
    <dubbo:registry id="lz" protocol="zookeeper" address="dubbo1.oilchem.local:2181,dubbo2.oilchem.local:2182,dubbo3.oilchem.local:2183"></dubbo:registry>

    <dubbo:reference interface="com.mysteel.workflow.api.WorkFlowApi" id="workflowApi" check="false"  timeout="20000"  registry="lz"/>
    <dubbo:reference interface="com.mysteel.workflow.api.TaskFlowControlApi" id="taskFlowControlApi" check="false"  timeout="20000" registry="lz"/>
    <dubbo:reference interface="com.mysteel.workflow.api.BlackWorkFlowApi" id="blackWorkFlowApi" check="false" registry="lz"/>

    <dubbo:reference interface="com.mysteel.admin.AdminService" id="adminService" timeout="20000" version="2.0" registry="gl"/>
    <dubbo:reference interface="com.mysteel.admin.DepartmentService" id="departmentService" timeout="20000" version="2.0" registry="gl"/>
</beans>
